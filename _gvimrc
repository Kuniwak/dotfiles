scriptencoding utf-8

" Appearance
if has('gui_macvim')
  "colorscheme darkburn

  set showtabline=2
  set transparency=3
  set guioptions-=T
  set guifont=Monaco:h9
  set guifontwide=HiraMaruPro-W4:h9
  
  set transparency=10
end

if has("win32") || has("win64")
  set ambiwidth=auto
  "let &guifont = iconv('Osaka－等幅:h10:cSHIFTJIS', &encoding, 'cp932')
  set guifont=BDF_UM+:h9
end

colorscheme hybrid
